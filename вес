/*
Напечатать таблицу соответствия между весом в фунтах и весом в киллограммах
для занчений 1,2,3,...,10 фунтов (1фунт = 453г)
*/
import java.util.*;

public class Main {
    public static void main(String[] args) {
     
     double n=0.453;
     for (int i=1; i<=10; i++){
       if(i>=10){
         System.out.printf("%d фунтов = %.3f\n", i, i*n);
       }
       else {
       System.out.printf("%d фунт = %.3f\n", i, i*n);         
       }
     }
    }
}
